rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // デフォルト: 全てのアクセスを拒否
    match /{document=**} {
      allow read, write: if false;
    }

    // ユーザープロフィール: 自分のプロフィールのみ読み書き可能
    match /userProfiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // タスクツリー: 自分のタスクツリーのみ読み書き可能
    match /taskTrees/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ゴール: userIdフィールドが自分のものだけ読み書き可能
    match /goals/{goalId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // プロジェクト: userIdフィールドが自分のものだけ読み書き可能
    match /projects/{projectId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // マイルストーン: userIdフィールドが自分のものだけ読み書き可能
    match /milestones/{milestoneId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // タスク: userIdフィールドが自分のものだけ読み書き可能
    match /tasks/{taskId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // チャットメッセージ: userIdフィールドが自分のものだけ読み書き可能
    match /chatMessages/{messageId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 完了タスク: userIdフィールドが自分のものだけ読み書き可能
    match /completedTasks/{taskId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // 会話履歴: userIdフィールドが自分のものだけ読み書き可能
    match /conversations/{conversationId} {
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;

      // 会話メッセージ（サブコレクション）
      match /messages/{messageId} {
        allow read, write: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.userId == request.auth.uid;
      }
    }

    // 利用状況: 自分の利用状況のみ読み書き可能
    match /userUsage/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ログイン連続日数: 自分のデータのみ読み書き可能
    match /loginStreaks/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
